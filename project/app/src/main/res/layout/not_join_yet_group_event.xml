<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_zero_margin"
    android:paddingLeft="@dimen/activity_zero_margin"
    android:paddingRight="@dimen/activity_zero_margin"
    android:paddingTop="@dimen/activity_zero_margin"
    tools:context="superalarm.firsttry.event_start_activity">

    <TextView
        android:id="@+id/notYetTextEvent"
        android:text="小组群名称:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notYetTextTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:textStyle="bold"
        />

    <TextView
        android:id="@+id/notYetTextMaster"
        android:text="小组群组长:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notYetTextEvent"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:textStyle="bold"
        />

    <TextView
        android:id="@+id/notYetTextJoinPeople"
        android:text="人员情况:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notYetTextMaster"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:textStyle="bold"
        />

    <TextView
        android:id="@+id/notYetTextDetails"
        android:text="备注信息:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notYetTextJoinPeople"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:textStyle="bold"
        />

    <TextView
        android:id="@+id/notYetTextFillName"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/notYetTextEvent"
        android:layout_alignBottom="@+id/notYetTextEvent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="name"
        />

    <TextView
        android:id="@+id/notYetTextFillMaster"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/notYetTextFillName"
        android:layout_toRightOf="@+id/notYetTextMaster"
        android:layout_alignBottom="@+id/notYetTextMaster"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="master"
        />

    <TextView
        android:id="@+id/notYetTextFillJoinPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notYetTextFillName"
        android:layout_alignBottom="@+id/notYetTextJoinPeople"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text = "xx/maxNum"
        />

    <TextView
        android:id="@+id/notYetTextFillDetails"
        android:text = "xxxxxxx"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:ems="300"
        android:gravity="start"
        android:maxLines="10"
        android:layout_below="@+id/notYetTextDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageButton
        android:id="@+id/notYetImageButton_person"
        android:scaleType="fitXY"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#FFFFFFFF"
        app:srcCompat="@drawable/btn_person"
        android:contentDescription=""
        tools:ignore="ContentDescription,RtlHardcoded"
        android:layout_toRightOf="@id/notYetTextFillJoinPeople"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@id/notYetTextJoinPeople"
        />

    <Button
        android:id="@+id/buttonJoinNotYet"
        android:text="加入小组群"
        tools:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="#99ff99"
        />



</RelativeLayout>