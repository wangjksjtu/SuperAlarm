<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_avatar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_zero_margin"
    android:paddingLeft="@dimen/activity_zero_margin"
    android:paddingRight="@dimen/activity_zero_margin"
    android:paddingTop="@dimen/activity_zero_margin"
    tools:context="superalarm.firsttry.AvatarActivity">

    <TextView
        android:id="@+id/compleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人信息完善"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头像选择"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="54dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戳一下下方图片~"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_light"/>

    <ImageButton
        android:id="@+id/RandomAvatar"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/clock4"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/Ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Button"
        android:backgroundTint="@android:color/transparent"
        android:text="确认"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
